@using System.Web.Optimization
@model IEnumerable<Sw.Hospital.HealthExaminationSystem.Web.Models.Downloads.UriFileInfo>

@{
    Layout = null;
    ViewBag.Title = "下载文件";
}

@Styles.Render("~/Bundles/vendor/css")

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    文件列表
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Url)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td><a href="@item.Url" target="_blank">主站点</a></td>
                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" data-toggle="modal" data-target="">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>
</div>